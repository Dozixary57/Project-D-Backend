{
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["import"],
  "rules": {
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@tools", "./Tools"]
        ],
        "extensions": [".js", ".json"]
      }
    }
  }
}